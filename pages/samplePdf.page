<apex:page title="PDF" controller="GeneratePdfController" renderAs="pdf">
    <apex:form>
        <table style="width=100%; padding-bottom:20px;">
            <tr>
                <td><apex:image url="https://brave-moose-96fyf2-dev-ed--c.vf.force.com/resource/1665561089000/SalesforceLogo?" styleClass="imageStyle" id="logo" width="150" height="100" alt="Salesforce Logo"/></td>
                <td style="font:18pt; padding-left:10px; padding-right:280px;">Salesforce</td>
                <td style="font:24pt;">Quotation</td>
            </tr>
        </table>

        <table style="border:0.5px solid #fff; padding-bottom:10px;">
            <tr>
                <td>415 Mission Street, San Francisco, CA 94105, USA</td>
                <td style="text-align:right;">Quote #:</td>
                <td style="text-align:right;">Q-00055</td>
            </tr>
            <tr>
                <td style="padding-right:300px;">(415) 901-7000</td>
                <td style="text-align:right;">Date:</td>
                <td style="text-align:right;">
                    <apex:outputText value="{0,date, MM'/'dd'/'yyyy}">
                    <apex:param value="{!TODAY()}" /> 
                    </apex:outputText>
                </td>
            </tr>
            <tr>
                <td style="padding-right:370px;">www.salesforce.com</td>
                <td style="text-align:right;">Generated By:</td>
                <td style="text-align:right;"><apex:outputText value="{!opportunity.Owner.Name}"/></td>
            </tr>
        </table>
        <hr></hr>
        <p>Thank you, <b><apex:outputText value=" {!opportunity.Account.Name}"/></b>, for choosing Salesforce.</p>

        <table style="border:0.5px solid #fff; padding-top:10px; padding-bottom:10px;">
            <tr><th>Customer Name:</th>
                <td><apex:outputText value="{!opportunity.Account.Name}"/></td>
            </tr>
            <tr><th>Customer Address:</th>
                <td>
                    <apex:outputText value="{!opportunity.Account.BillingStreet}"/>,&nbsp;
                    <apex:outputText value="{!opportunity.Account.BillingCity}"/>,&nbsp;
                    <apex:outputText value="{!opportunity.Account.BillingPostalCode}"/>
                </td>
            </tr>
            <tr><th>Opportunity Name:</th>
                <td><apex:outputText value="{!opportunity.Name}"/></td>
            </tr>
            <tr><th>Amount:</th>
                <td><apex:outputText value="{!opportunity.Amount}"/></td>
            </tr>
            <tr><th>Currency:</th>
                <td><apex:outputText value="{!opportunity.Currency__c}"/></td>
            </tr>
            <tr><th>Close Date:</th>
                <td><apex:outputText value="{0,date,MM'/'dd'/'yyyy}">
                    <apex:param value="{!opportunity.CloseDate}"/>
                    </apex:outputText>
                </td>
            </tr>
        </table>

        <br></br>

        <apex:pageblock> 
            <apex:pageBlockTable value="{!oppLineItem}" width="100%" var="o" border="0.5">
                <apex:column headerValue="Product Code"     value="{!o.PricebookEntry.ProductCode}"/>
                <apex:column headerValue="Product Name"     value="{!o.PricebookEntry.Product2.Name}"/>
                <apex:column headerValue="Quantity"         value="{!o.Quantity}"/>
                <apex:column headerValue="Total Price"      value="{!o.TotalPrice}"/>
            </apex:pageBlockTable>
        </apex:pageblock> 
        <br></br>

        <table width="100%" height="100px">
            <tr>
                <td>
                    <div style="padding-top:20px; padding-bottom:40px; background-color:#fff; border: 0.5px solid #fff;"><b>Remark</b>
                        <br></br>
                        <apex:outputText value="{!comment}"></apex:outputText>				
                    </div>
                </td>
            </tr>
        </table>

        <table>
            <tr>
                <td><b>Signature:</b> _________________________________</td>
                <td style="padding-left:15px;"><b>Effective Date:</b> ______/______/______</td>
            </tr>
            <tr>
                <td><b>Name (Print):</b> _________________________________</td>
                <td style="padding-left:15px;"><b>Title:</b> _________________________________</td>
            </tr>
        </table>

        <p style="color: gray; padding-top:20px; padding-bottom:10px;">It's a pleasure to have you on board.  Please do not hesitate to contact us should you have any questions or concerns.</p>
       
        <p style="text-align:center;"><b>THANK YOU FOR YOUR BUSINESS!</b></p>
    </apex:form>
</apex:page>